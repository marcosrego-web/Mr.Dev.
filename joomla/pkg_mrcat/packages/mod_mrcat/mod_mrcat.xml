<extension type="module" version="3.7" client="site" method="upgrade">
	<name>MR Categories</name>
	<version>0.5.1</version>
	<author>Marcos Rego</author>
	<creationDate>December 2019</creationDate>
	<copyright>Copyright (c) 2019 Marcos Rego. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>web@marcosrego.com</authorEmail>
	<authorUrl>https://marcosrego.com</authorUrl>
	<description>
	<![CDATA[
<span class="readonly"><p> from <a href="https://marcosrego.com/en/web-en/mrcat-en/" target="_blank" style="color: #000;">
		<img style="height: 20px; margin-bottom: 5px;" src="data:image/svg+xml;utf8;base64," alt="Mr.Cat. Logo" title="Icon made by Freepik from flaticon.com"> <strong style="font-weight:700" title="Click to know Mr.Cat.">Mr.Cat.</strong></a> | Displays categories in a variety of layouts and customizable options.</p></span>
	]]>
	</description>
	<files>
		<filename module="mod_mrcat">mod_mrcat.php</filename>
		<filename>helper.php</filename>
		<filename>items.php</filename>
		<filename>index.html</filename>
		<folder>themes</folder>
		<folder>assets</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
			</fieldset>
			<fieldset name="mrcat_categories" label="Categories">
				<field
					name="orderby"
					type="list"
					label="Sort by"
					description="Automatically sort items by a specific type of order."
					filter="integer"
				>
					<option value="0">Parent</option>
					<option value="1">Title</option>
					<option value="2">Creation</option>
					<option value="4">Alias</option>
					<option value="5">Ordering</option>
					<option value="6">Level</option>
				</field>
				<field
					name="order"
					type="list"
					label=""
					description="Choose ascending or descending"
					filter="integer"
				>
					<option value="0">Ascending</option>
					<option value="1">Descending</option>
				</field>
				<field
					name="excludeinclude"
					type="list"
					label="Categories"
					description="Choose if to exclude or to include the manually selected categories."
					default="0"
					filter="integer"
				>
					<option value="0">Exclude</option>
					<option value="1">Include</option>
				</field>
				<field 
					name="itemselect"
					type="category"
					extension="com_content"
					label=""
					description="Choose which items to exclude/include."
					multiple="true"
					default="0"
					published="1"
					show_root="true"
					hint="Type or select items"
				/>
			</fieldset>
			<fieldset name="mrcat_appearance" label="Appearance">
				<field 
					name="appearance"
					type="subform"
					formsource="modules/mod_mrcat/themes/index.xml"
					label="Appearance"
					description=""
				/>
			</fieldset>
			<fieldset name="mrcat_pagination" label="Pagination">
				<field
					name="perline"
					type="list"
					label="Items per line"
					description="Choose number of items to show per line."
					default="0"
					filter="integer"
				>
				<option value="0">∞</option>
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
				<option value="6">6</option>
				<option value="7">7</option>
				<option value="8">8</option>
				<option value="9">9</option>
				<option value="10">10</option>
				<option value="11">11</option>
				<option value="12">12</option>
				</field>
				<field
					name="perpage"
					type="number"
					label="Items per page"
					description="Choose number of items to show per page."
					default=""
					hint="∞"
					filter="integer"
				/>
				<field name="pagetoggles" type="checkboxes" class="mrwid-checkbox" label="Toggles" default="0">
					<option value="0">Arrows</option>
					<option value="1">Select</option>
					<option value="2">Radio</option>
					<option value="5">Keyboard</option>
					<option value="3">Below</option>
					<option value="4">Scroll</option>
				</field>
				<field
					name="pagetransition"
					type="list"
					label="Transition"
					default="fade"
					filter="safehtml"
				>
					<option value="fade">Fade</option>
					<option value="slide">Slide</option>
					<option value="scale">Scale</option>
					<option value="zoom">Zoom</option>
					<option value="none">None</option>
				</field>
			</fieldset>
			<fieldset name="mrcat_display" label="Display">
				<field
					name="title"
					type="list"
					label="Module subtitle"
					description=""
					default="0"
					filter="integer"
				>
					<option value="0">No module subtitle</option>
					<option value="3">Theme and layout title</option>
					<option value="4">Theme title</option>
					<option value="5">Layout title</option>
				</field>
				<field
					name="itemimage"
					type="list"
					label="Images"
					description=""
					default="1"
					filter="integer"
				>
					<option value="1">Category image</option>
					<option value="8">Category desc. first image</option>
					<option value="2">Latest featured article image</option>
					<option value="3">Latest featured intro image</option>
					<option value="4">Latest featured full image</option>
					<option value="5">Latest article image</option>
					<option value="6">Latest intro image</option>
					<option value="7">Latest full image</option>
					<option value="0">No image</option>
				</field>
				<field
					name="itemstitle"
					type="list"
					label="Titles"
					description="Choose the items' default title and the maximum number of characters to display."
					default="0"
					filter="integer"
				>
					<option value="0">Linked category title</option>
					<option value="2">Category title</option>
					<option value="1">No title</option>
				</field>
				<field
					name="itemstitlemax"
					type="number"
					label=""
					description=""
					default=""
					hint="Max. characters"
					filter="integer"
					showon="itemstitle!:1"
				/>
				<field
					name="itemdesc"
					type="list"
					label="Descriptions"
					description="Choose the items' default description and the maximum number of characters to display."
					default="0"
					filter="integer"
				>
					<option value="0">Category description</option>
					<option value="2">Category intro text</option>
					<option value="3">Category full text</option>
					<option value="1">No description</option>
				</field>
				<field
					name="itemdescmax"
					type="number"
					label=""
					description=""
					default=""
					hint="Max. characters"
					filter="integer"
					showon="itemdesc!:1"
				/>
				<field
					name="itemlink"
					type="list"
					label="Links"
					description="Choose the items' default link and the bottom link text to display."
					default="0"
					filter="integer"
				>
					<option value="0">Category link</option>
					<option value="1">No bottom link</option>
				</field>
				<field
					name="bottomlink"
					type="text"
					label=""
					description=""
					default="Know more..."
					hint="Bottom link text"
					showon="itemlink!:1"
					filter="safehtml"
				/>
				</fieldset>
				<fieldset name="mrcat_options" label="Options">
				<field name="globallayoutoptions" type="checkboxes" class="mrwid-checkbox" label="Global layout options">
					<option value="windowheight">Window height</option>
					<option value="contentpagination">Pagination inside content</option>
					<option value="donotinactive">Do not inactive on click</option>
					<option value="keepactive">Keep other actives opened</option>
					<option value="hideinactives">When active hide inactives</option>
					<option value="subcatactive">Only show subcategories of active</option>
				</field>
				<field name="itemoptions" type="checkboxes" class="mrwid-checkbox" label="Other options">
					<option value="artcount">Show number of articles</option>
					<option value="hover">Active on mouseover</option>
					<option value="autoscroll">Auto scroll to active</option>
					<option value="url">Change URL on active</option>
					<option value="remember">Remember last active (uses cookies)</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					filter="safehtml"
				/>
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					filter="integer"
				>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					filter="integer"
				/>
				<field
					name="cachemode"
					type="hidden"
					default="static"
				>
					<option value="static"></option>
				</field>
			</fieldset>
			<fieldset name="mrdev" label="DO YOU NEED MORE FEATURES?">
				<field name="mrdevtxt" type="note" class="alert alert-info" label="If you need more features then you need Mr.Dev." description="Mr.Dev. is one plugin that combines all MR Modules, add-ons and utilities giving to 'MR Categories' extras such as: Choose main categories to only display their childs. Manually reorder. Pin to choose the one starting active. Auto exclude Subcategories, Categories with no articles, same link, different link and more. More image options such as parallax and thumbnails. Choose a fallback image and images maximum size. Hide module sections to specific users or groups. Other Advanced options such as preload pages, choose the titles tag (h2, h3, h4, p, etc), do not load polyfill on IE, add custom classes to the bottom link. And more..." />
			</fieldset>
		</fields>
	</config>
</extension>
